<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Actualizar o Eliminar Usuarios"/>
            <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre" />
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario" />
            <Entry x:Name="txtContrasena" Placeholder="Ingrese la contraseña" />
            <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked" BackgroundColor="Green" TextColor="White" CornerRadius="15"/>
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked" BackgroundColor="Red" TextColor="White" CornerRadius="15"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>